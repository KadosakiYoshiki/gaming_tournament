<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <%= f.label :email, "メールアドレス", class: "label-login" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "パスワード", class: "label-login" %>
      <%= f.password_field :password, class: 'form-control' %>

        <%= f.check_box :remember_me, id: "remember-me" %>
        <span>ログイン情報を記憶する</span>

      <%= f.submit "ログイン", class: "btn btn-secondary btn-block btn-login" %>
    <% end %>
    <p>
      ユーザー登録がまだの場合は<%= link_to "こちら", signup_path, class: "text-reset font-weight-bold" %>
    </p>
  </div>
  
  <p>
    <%= link_to image_tag("login_by_twitter.png", class: "img-fluid rounded") + " ログイン", "/auth/twitter", method: :post, class: "btn btn-primary" %>
  </p>
</div>

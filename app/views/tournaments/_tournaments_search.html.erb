<tr><td colspan="12"><%= will_paginate @tournaments, {:class => 'pagination'} %></td></tr>
<% @tournaments.each do |tournament| %>
  <% master = master_tournament(tournament) %>
  <tr>
    <td colspan="4"><%= link_to tournament.name, tournament, class: "text-reset font-weight-bold" %></td>
    <td colspan="2" class="text-wrap text-break"><%= tournament.game_title %></td>
    <td colspan="4" class="text-wrap text-break"><%#= link_to image_tag(master.image.to_s, class: "img-fluid img-thumbnail rounded m-2", :style => "width:60px; height:60px;") + "#{master.name}", master, class: "text-reset" %>
      <%= link_to image_tag(master.image.to_s, class: "img-fluid img-thumbnail rounded m-2", :style => "width:60px; height:60px;"), master %><br><%= link_to "#{master.name}", master, class: "text-reset font-weight-bold" %>
    </td>
    <td colspan="1"><%= l(tournament.start_time, format: :short) %></td>
    <td colspan="1"><%= tournament.status %></td>
  </tr>
<% end %>
<tr><td colspan="12"><%= will_paginate @tournaments, {:class => 'pagination'} %></td></tr>
